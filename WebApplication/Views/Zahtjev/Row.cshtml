@using WebApplication.Controllers
@model WebApplication.ViewModels.ZahtjevViewModel

<tr>
    <td class="text-left">@Model.IdZahtjeva</td>
    <td class="text-left">@Model.NazivUsluge</td>
    <td class="text-left">@Model.ImePrezime</td>
    <td class="text-left">@Model.DatumOd</td>
    <td class="text-left">@Model.DatumDo</td>
    <td class="text-left">@Model.BrojVozila</td>
    <td class="btn-group">
                <a asp-action="Edit"
                   asp-route-id="@Model.IdZahtjeva"
                   class="btn btn-sm btn-secondary" title="Azuriraj">
                    Edit
                </a>
        <form asp-action="Delete" method="POST">
            <input type="hidden" name="id" value="@Model.IdZahtjeva" />
            <button data-idzahtjeva="@Model.IdZahtjeva" type="submit" class="btn btn-danger deleteajax" title="Obrisi">
                Delete
            </button>
        </form>
    </td>
</tr>