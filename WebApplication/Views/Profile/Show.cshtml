@using WebApplication.ViewModels
@model AppUser
@{
    string imePrezime = Model.FirstName + " " + Model.LastName;
}
<div class="container" style="color:#0b486b;">
    <h1 class="text-center text-white">Profil</h1>
    <div class="row bg-white rounded">
        <div class="col-md-6">
            <h4>Name: @imePrezime</h4>
        </div>
        <div class="col-md-6">
            <h4>Email: @Model.Email</h4>
        </div>
    </div>
    <div class="row bg-white rounded"></div>
    <div class="row bg-white rounded"></div>
    <br /><br />
    <h1 class="text-center text-white">Zahtjevi</h1>
    <div class="row bg-white rounded text-center">
        <table class="table table-sm table-bordered table-bordered bg-white rounded" style="color: #0b486b;" id="tabledrzave">
            <thead>
            <tr>
                @{
                    string[] nazivi = {"ID zahtjeva", "Naziv Usluge", "Datum od", "Datum do", "Broj vozila"};
                    for (int i=1; i<= nazivi.Length; i++)
                    {
                        <th><a>
                            @nazivi[i-1]
                        </a></th>
                    }
                }
                <th></th>
            </tr>
            </thead>
            <tbody style="color: #0b486b;">
            @foreach (var zahtjev in ViewBag.Zahtjevi)
            {
                <partial name="Row" model="zahtjev" />
            }
            </tbody>
        </table>
    </div>
</div>