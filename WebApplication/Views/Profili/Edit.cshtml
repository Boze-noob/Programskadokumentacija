@model Profili

@{
    ViewBag.Title = "Ažuriranje profila";
}

<form asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      method="post">
    <input type="hidden" asp-for="IdProfila" />
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="IdZaposlenika"></label>
        <div><span asp-validation-for="IdZaposlenika" class="text-danger"></span></div>
        <select class="form-control" asp-for="IdZaposlenika" asp-items="ViewBag.Zaposlenici">
            <option disabled selected value="">Odaberite zaposlenika</option>
        </select>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Spremi</button>
        <a asp-action="Index"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           class="btn btn-secondary">Odustani</a>
    </div>
</form>