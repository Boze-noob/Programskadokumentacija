@using WebApplication.Controllers
@model WebApplication.ViewModels.ProfilViewModel

<tr>
    <td class="text-left">@Model.IdProfila</td>
    <td class="text-left">@Model.ImeZaposlenika</td>
    <td class="btn-group">
                <a asp-action="Edit"
                   asp-route-id="@Model.IdProfila"
                   class="btn btn-sm btn-secondary" title="Azuriraj">
                    Edit
                </a>
        <form asp-action="Delete" method="POST">
            <input type="hidden" name="id" value="@Model.IdProfila" />
            <button data-idprofil="@Model.IdProfila" type="submit" class="btn btn-danger deleteajax" title="Obrisi">
                Delete
            </button>
        </form>
    </td>
</tr>