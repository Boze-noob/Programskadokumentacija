@model WebApplication.ViewModels.KategorijeViewModel
@{
    ViewData["Title"] = "Popis Kategorija";
}

<a asp-action="Create">Unos Nove Kategorije</a>

<pager page-info="@Model.PagingInfo" page-title="Unesite zeljenu stranicu" page-action="Index" class="float-right"></pager>

<table class="table table-sm table-striped table-hover" id="tabledrzave">
    <thead>
    <tr>
        <th><a asp-route-sort="1" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort != 1 || !Model.PagingInfo.Ascending)">Id Kategorije</a></th>
        <th><a asp-route-sort="2" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort != 2 || !Model.PagingInfo.Ascending)">Naziv Kategorije</a></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var kategorija in Model.Kategorije)
    {
        <tr>
            <td class="text-center">@kategorija.IdKategorije</td>
            <td class="text-left">@kategorija.Naziv</td>
            <td class="btn-group">
                <a asp-action="Edit"
                   asp-route-id="@kategorija.IdKategorije"
                   asp-route-page="@Model.PagingInfo.CurrentPage"
                   asp-route-sort="@Model.PagingInfo.Sort"
                   asp-route-ascending="@Model.PagingInfo.Ascending"
                   class="btn btn-sm btn-secondary" title="Azuriraj">
                    Edit
                </a>
                
                <form asp-action="Delete" method="POST" 
                      asp-route-page="@Model.PagingInfo.CurrentPage" 
                      asp-route-sort="@Model.PagingInfo.Sort" 
                      asp-route-ascending="@Model.PagingInfo.Ascending">
                    <input type="hidden" name="id" value="@kategorija.IdKategorije" />
                    <button type="submit" class="btn btn-sm btn-danger delete" title="Obrisi">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

@section Styles 
{
    
}

@section Scripts
{
    
}
