@model Tvrtke

@{
    ViewBag.Title = "Nova oprema";
}
<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="IdTvrtke"></label>
        <div><span asp-validation-for="IdTvrtke" class="text-danger"></span></div>
        <input asp-for="IdTvrtke" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Naziv"></label>
        <div><span asp-validation-for="Naziv" class="text-danger"></span></div>
        <input asp-for="Naziv" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="DogovoreniPopustPostotak"></label>
        <div><span asp-validation-for="DogovoreniPopustPostotak" class="text-danger"></span></div>
        <input asp-for="DogovoreniPopustPostotak" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="VrijemeSuradnjeGodine"></label>
        <div><span asp-validation-for="VrijemeSuradnjeGodine" class="text-danger"></span></div>
        <input asp-for="VrijemeSuradnjeGodine" class="form-control"/>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Dodaj</button>
        <a asp-action="Index" class="btn btn-secondary">Odustani</a>
    </div>
</form>