@model Zaposlenici

@{
    ViewBag.Title = "Ažuriranje zaposlenika";
}

<form asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      method="post">
    <input type="hidden" asp-for="IdZaposlenika" />
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="IdOdjela"></label>
        <div><span asp-validation-for="IdOdjela" class="text-danger"></span></div>
        <select class="form-control" asp-for="IdOdjela" asp-items="ViewBag.Odjeli">
            <option disabled selected value="">Odaberite odjel</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="IdOsobe"></label>
        <div><span asp-validation-for="IdOsobe" class="text-danger"></span></div>
        <select class="form-control" asp-for="IdOsobe" asp-items="ViewBag.Osobe">
            <option disabled selected value="">Odaberite osobu</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="RadniStaz"></label>
        <input asp-for="RadniStaz" class="form-control"/>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Spremi</button>
        <a asp-action="Index"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           class="btn btn-secondary">Odustani</a>
    </div>
</form>