@using WebApplication.Controllers
@model WebApplication.ViewModels.ZaposlenikViewModel

<tr>
    <td class="text-left">@Model.IdZaposlenika</td>
    <td class="text-left">@Model.NazivOdjela</td>
    <td class="text-left">@Model.ImeOsobe</td>
    <td class="text-left">@Model.RadniStaz</td>
    <td class="btn-group">
                <a asp-action="Edit"
                   asp-route-id="@Model.IdZaposlenika"
                   class="btn btn-sm btn-secondary" title="Azuriraj">
                    Edit
                </a>
        <form asp-action="Delete" method="POST">
            <input type="hidden" name="id" value="@Model.IdZaposlenika" />
            <button data-idzap="@Model.IdZaposlenika" type="submit" class="btn btn-danger deleteajax" title="Obrisi">
                Delete
            </button>
        </form>
    </td>
</tr>