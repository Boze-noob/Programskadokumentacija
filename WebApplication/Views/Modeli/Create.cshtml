@model Modeli

<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="IdModela"></label>
        <input asp-for="IdModela" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Naziv"></label>
        <input asp-for="Naziv" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="IdSpecifikacija"></label>
        <div><span asp-validation-for="IdSpecifikacija" class="text-danger"></span></div>
        <select class="form-control" asp-for="IdSpecifikacija" asp-items="ViewBag.Specifikacije">
            <option selected value="" disabled>Odaberite specifikaciju</option>
        </select>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Dodaj</button>
        <a asp-action="Index" class="btn btn-secondary">Odustani</a>
    </div>
</form>