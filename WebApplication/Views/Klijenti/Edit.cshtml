@model Klijenti

@{
    ViewBag.Title = "Ažuriranje klijenta";
}

<form asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      method="post">
    <input type="hidden" asp-for="IdKlijenta" />
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="IdOsobe"></label>
        <div><span asp-validation-for="IdOsobe" class="text-danger"></span></div>
        <select class="form-control" asp-for="IdOsobe" asp-items="ViewBag.Osobe">
            <option disabled selected value="">Odaberite osobu</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="IdTvrtke"></label>
        <div><span asp-validation-for="IdTvrtke" class="text-danger"></span></div>
        <select class="form-control" asp-for="IdTvrtke" asp-items="ViewBag.Tvrtke">
            <option disabled selected value="">Odaberite tvrtku</option>
        </select>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Spremi</button>
        <a asp-action="Index"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           class="btn btn-secondary">Odustani</a>
    </div>
</form>
