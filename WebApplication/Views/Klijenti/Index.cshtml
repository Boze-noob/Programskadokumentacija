@model WebApplication.ViewModels.KlijentiViewModel
@{
    ViewData["Title"] = "Popis klijenata";
}

<a asp-action="Create">Unos Novog klijenta</a>

<pager page-info="@Model.PagingInfo" page-title="Unesite zeljenu stranicu" page-action="Index" class="float-right"></pager>

<table class="table table-sm table-striped table-hover" id="tabledrzave">
    <thead>
    <tr>
        @{
            string[] nazivi = {"ID klijenta", "Ime prezime", "Naziv tvrtke"};
            for (int i=1; i<= nazivi.Length; i++)
            {
                <th><a asp-route-sort="@i"
                       asp-route-page="@Model.PagingInfo.CurrentPage"
                       asp-route-ascending="@(Model.PagingInfo.Sort != i || !Model.PagingInfo.Ascending)">
                    @nazivi[i-1]
                </a></th>
            }
        }
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var klijent in Model.Klijenti)
    {
        <partial name="Row" model="klijent"/>
    }
    </tbody>
</table>

@section Styles 
{
    
}

@section Scripts
{
    <script>
        $(function() {
          SetDeleteAjax(".deleteajax", '@Url.Action("Delete")', 'idklijent');
        });      
    </script>
}
