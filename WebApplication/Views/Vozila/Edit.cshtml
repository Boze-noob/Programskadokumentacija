@model Vozila

@{
    ViewBag.Title = "Ažuriranje vozila";
}

<form asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      method="post">
    <input type="hidden" asp-for="IdVozila" />
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="IdProizvodjaca"></label>
        <div><span asp-validation-for="IdProizvodjaca" class="text-danger"></span></div>
        <select class="form-control" asp-for="IdProizvodjaca" asp-items="ViewBag.Proizvodjaci">
            <option disabled selected value="">Odaberite proizvodjaca</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="IdModela"></label>
        <div><span asp-validation-for="IdModela" class="text-danger"></span></div>
        <select class="form-control" asp-for="IdModela" asp-items="ViewBag.Modeli">
            <option disabled selected value="">Odaberite model</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Cijena"></label>
        <input asp-for="Cijena" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Dostupno"></label>
        <input type="checkbox" asp-for="Dostupno" class="form-control"/>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Spremi</button>
        <a asp-action="Index"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           class="btn btn-secondary">Odustani</a>
    </div>
</form>