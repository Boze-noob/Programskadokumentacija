@using WebApplication.Controllers
@model WebApplication.ViewModels.VoziloViewModel

<tr>
    <td class="text-left">@Model.IdVozila</td>
    <td class="text-left">@Model.NazivProizvodjaca</td>
    <td class="text-left">@Model.NazivModela</td>
    <td class="text-left">@Model.Cijena KM</td>
    <td class="text-left"><input type="checkbox" disabled @(Model.Dostupno ? "checked" : "") /></td>
    <td class="btn-group">
                <a asp-action="Edit"
                   asp-route-id="@Model.IdVozila"
                   class="btn btn-sm btn-secondary" title="Azuriraj">
                    Edit
                </a>
        <form asp-action="Delete" method="POST">
            <input type="hidden" name="id" value="@Model.IdVozila" />
            <button data-idvozila="@Model.IdVozila" type="submit" class="btn btn-danger deleteajax" title="Obrisi">
                Delete
            </button>
        </form>
    </td>
</tr>